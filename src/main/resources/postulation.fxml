<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.PostulationController"
            style="-fx-background-color: #BAD2E0; -fx-padding: 20px;">

    <VBox spacing="15" alignment="CENTER">
        <Label text="Postulation"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #113356;"/>

        <TextField fx:id="jobNameField" promptText="Nom du job" editable="false"/>
        <TextArea fx:id="jobDescriptionField" promptText="Description du job" editable="false"/>
        <TextField fx:id="jobLocationField" promptText="Lieu du poste" editable="false"/>
        <TextField fx:id="jobTypeField" promptText="Type du poste" editable="false"/>

        <TextArea fx:id="coverLetterField" promptText="RÃ©digez votre lettre de motivation"/>

        <Button text="Envoyer" onAction="#submitApplication"
                style="-fx-background-color: #25456B;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-padding: 10px 20px;
                       -fx-background-radius: 10px;"/>
    </VBox>
</AnchorPane>
