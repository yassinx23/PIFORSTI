<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.JobList"
            style="-fx-background-color: #BAD2E0; -fx-padding: 20px;">

    <VBox spacing="20" alignment="CENTER" prefWidth="450" layoutX="50" layoutY="30">

        <!-- Titre de l'interface -->
        <Label text="Offres d'Emploi"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #113356;"/>

        <!-- Liste des offres avec une bordure stylisée -->
        <ListView fx:id="jobList" prefHeight="250"
                  style="-fx-background-color: #FFFFFF;
                         -fx-border-color: #3078CD;
                         -fx-border-radius: 10px;
                         -fx-padding: 5px;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);"/>

        <!-- Bouton stylisé -->
        <Button text="Postuler" onAction="#postuler"
                style="-fx-background-color: #25456B;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-padding: 10px 25px;
                       -fx-background-radius: 10px;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 3);"/>

    </VBox>

</AnchorPane>
