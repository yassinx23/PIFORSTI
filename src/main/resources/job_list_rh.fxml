<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.JobListController"
            style="-fx-background-color: #BAD2E0; -fx-padding: 20px;">

    <VBox spacing="20" alignment="CENTER" prefWidth="450" layoutX="50" layoutY="30">

        <!-- Titre de l'interface -->
        <Label text="Offres d'Emploi"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #113356;"/>

        <!-- Liste des offres avec une bordure stylisée -->
        <ListView fx:id="jobListView" prefHeight="250"
                  style="-fx-background-color: #FFFFFF;
                         -fx-border-color: #3078CD;
                         -fx-border-radius: 10px;
                         -fx-padding: 5px;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);"/>

        <!-- Boutons stylisés dans un VBox pour un meilleur agencement vertical -->
        <VBox spacing="15" alignment="CENTER" prefWidth="300">

            <!-- Bouton stylisé pour ajouter un emploi -->
            <Button text="Ajouter un emploi" onAction="#handleAddJob"
                    style="-fx-background-color: #25456B;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-padding: 10px 25px;
                           -fx-background-radius: 10px;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 3);"/>

            <!-- Bouton stylisé pour éditer un emploi -->
            <Button text="Modifier un emploi" onAction="#handleEditJob"
                    style="-fx-background-color: #25456B;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-padding: 10px 25px;
                           -fx-background-radius: 10px;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 3);"/>

            <!-- Bouton stylisé pour supprimer un emploi (rouge) -->
            <Button text="Supprimer un emploi" onAction="#handleDeleteJob"
                    style="-fx-background-color: #D32F2F;  /* Couleur rouge */
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-padding: 10px 25px;
                           -fx-background-radius: 10px;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 3);"/>
        </VBox>

    </VBox>

</AnchorPane>
